{{>header}}
{{>navbar}}
<section class="container my-3">
    <table class="table table-bordered">
        <thead>
            <th>Account number</th>
            <th>Client name</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {{#if noData}}
            <tr class="alert alert-danger">
                <td colspan="5">No posts available</td>
            </tr>
            {{else}}
            {{#each allData}}
                <tr>
                    <td>{{this.accNum}}</td>
                    <td>{{this.name}}</td>
                    <td>
                        <a href="/drawBalance/{{this.accNum}}" class="btn btn-warning mx-2">Withdraw</a>
                        <a href="/addBalance/{{this.accNum}}" class="btn btn-primary mx-2">Add Balance</a>
                        <a href="/delClient/{{this.accNum}}" class="btn btn-danger mx-2">Delete</a>
                        <a href="/showSingle/{{this.accNum}}" class="btn btn-success mx-2">Show client</a>
                    </td>
                </tr>
            {{/each}}
            {{/if}}
        </tbody>
    </table>
    <div class="text-right">
        <a href="/deleteAll" class="btn btn-danger">Delete all</a>
    </div>
</section>
{{>footer}}